{
  "name": "yourpluginname",
  "version": "1.0.0",
  "description": "my first plugin",
  "type": "module",
  "scripts": {
    "build": "npm run build:app && npm run build:lib",
    "build:app": "tsc && vite build --config vite.config.app.js",
    "build:lib": "tsc && vite build --config vite.config.lib.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build:lib"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@minecraft/server": "^2.5.0-beta.1.21.130-preview.24",
    "@minecraft/server-net": "^1.0.0-beta.1.21.130-preview.24",
    "@minecraft/server-ui": "^2.1.0-beta.1.21.130-preview.24",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "keystonemc": "^2.1.0"
  }
}
